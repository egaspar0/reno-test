{
  "extends": [ "config:best-practices"],
  "ignorePresets": ["group:monorepos"],
  "packageRules": [
    {
      "enabled": false,
      "matchPackagePatterns": ["*"]
    }
  ],
  "major": {
    "dependencyDashboardApproval": true,
    "addLabels": [
      "major-upgrade"
    ]
  },
  "vulnerabilityAlerts": {
    "groupName": "{{{vulnerabilitySeverity}}} vulnerability alerts",
    "enabled": true,
    "labels": [
      "security"
    ]
  },
  "transitiveRemediation" : true
}
