{
  "extends": [ "config:best-practices"],
  "packageRules": [    
      {
          "matchPackagePatterns": ["*"],
          "matchUpdateTypes": [
            "minor",
            "patch",
            "pin",
            "digest",
            "lockFileMaintenance",
            "rollback",
            "bump"
          ],
          "groupName": "all non-major dependencies",
          "groupSlug": "all-non-major-dependencies"
      },
      {
        "matchUpdateTypes": [
            "minor"
        ],
        "matchCurrentVersion": "/^[~^]?0/",
        "dependencyDashboardApproval": true,
        "addLabels": [
            "major-upgrade"
        ]
      },
      {
        "matchDatasources": ["npm", "nuget", "terraform-module", "terraform-provider"],
        "minimumReleaseAge": "14 days"
      }
    ],
  "major": {
    "dependencyDashboardApproval": true,
    "addLabels": [
      "major-upgrade"
    ]
  },
  "vulnerabilityAlerts": {
    "groupName": "{{{vulnerabilitySeverity}}} vulnerability dependencies",
    "enabled": true,
    "labels": [
      "security"
    ]
  },
  "transitiveRemediation" : true,
  "osvVulnerabilityAlerts": true
}
